---
import type { CollectionEntry } from "astro:content";
type Props = {
  post: CollectionEntry<"posts">;
};
const { post } = Astro.props;

---

<article class="card p-4 bg-gray-800 mb-2">
  <a
    href={`/blog/${post.slug}`}
    class="text-xl font-bold text-blue-600 pointer"
  >
    <img
      src={post.data.image}
      alt={post.data.title}
      class="object-cover rounded-2xl shadow-2xl aspect-thumbnail mb-6"
      width={1024}
      height={1024 / 2}
    />
  </a>
  <a href={`/blog/${post.slug}`} >
    <h2 class="text-blue-500 text-xl font-bold mb-2 inline-block">
        {post.data.title}
    </h2>
  </a>
  <p class="line-clamp-3">{post.body}</p>
</article>
